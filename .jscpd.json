{
  "threshold": 2.5,
  "reporters": ["html", "console", "json"],
  "format": ["typescript", "javascript", "tsx", "jsx"],
  "ignore": [
    "**/node_modules/**",
    "**/*.test.*",
    "**/*.spec.*",
    "**/tests/**",
    "**/*.d.ts",
    "**/dist/**",
    "**/.next/**",
    "**/out/**",
    "**/coverage/**"
  ],
  "minLines": 8,
  "minTokens": 40,
  "output": ".jscpd"
}
