{
  "name": "zap-pilot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "playwright test tests/essential.spec.ts tests/business-critical.spec.ts --project=chromium --config=playwright.config.ts --reporter=list",
    "test:all": "playwright test --config=playwright.config.ts",
    "test:essential": "playwright test tests/essential.spec.ts --project=chromium",
    "test:business": "playwright test tests/business-critical.spec.ts --project=chromium",
    "test:journey": "playwright test tests/user-journey.spec.ts --project=chromium",
    "test:full": "playwright test tests/essential.spec.ts tests/business-critical.spec.ts tests/user-journey.spec.ts --project=chromium",
    "test:smoke": "playwright test tests/essential.spec.ts --grep=\"Essential Functionality\" --project=chromium",
    "test:dev": "playwright test tests/essential.spec.ts --project=chromium --headed",
    "test:coverage": "playwright test tests/coverage-fast.spec.ts --project=chromium --reporter=html",
    "test:coverage-full": "npm run test:full && npm run test:coverage",
    "test:coverage-functional": "playwright test tests/coverage-simple.spec.ts --project=chromium",
    "test:analytics": "playwright test tests/analytics-ui.spec.ts --project=chromium",
    "test:ui-components": "playwright test tests/ui-components.spec.ts --project=chromium",
    "test:chart-utils": "playwright test tests/chart-utils.spec.ts --project=chromium",
    "test:chart-fix": "playwright test tests/chart-fix-verification.spec.ts --project=chromium",
    "test:defi": "playwright test tests/defi-functionality-advanced.spec.ts --project=chromium",
    "test:errors": "playwright test tests/error-handling-edge-cases.spec.ts --project=chromium",
    "test:security": "playwright test tests/security-validation.spec.ts --project=chromium",
    "test:performance": "playwright test tests/performance-stress.spec.ts --project=chromium",
    "test:business-logic": "playwright test tests/business-logic-calculations.spec.ts --project=chromium",
    "test:integration": "playwright test tests/integration-workflows.spec.ts --project=chromium",
    "test:comprehensive": "playwright test tests/analytics-ui.spec.ts tests/ui-components.spec.ts tests/chart-utils.spec.ts tests/chart-fix-verification.spec.ts --project=chromium",
    "test:advanced": "playwright test tests/defi-functionality-advanced.spec.ts tests/error-handling-edge-cases.spec.ts tests/security-validation.spec.ts tests/business-logic-calculations.spec.ts --project=chromium",
    "test:ci": "playwright test --config=playwright.ci.config.ts",
    "test:ci-essential": "playwright test tests/essential.spec.ts tests/business-critical.spec.ts tests/chart-fix-verification.spec.ts --config=playwright.ci.config.ts",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "prepare": "husky",
    "ci:test": "./scripts/test-ci-local.sh",
    "ci:quick": "./scripts/quick-ci-check.sh",
    "eslint:toggle": "./scripts/toggle-eslint.sh",
    "eslint:on": "./scripts/toggle-eslint.sh on",
    "eslint:off": "./scripts/toggle-eslint.sh off",
    "eslint:status": "./scripts/toggle-eslint.sh status"
  },
  "dependencies": {
    "framer-motion": "^12.19.1",
    "lucide-react": "^0.523.0",
    "next": "15.3.4",
    "next-pwa": "^5.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@zerodev/sdk": "^5.3.1",
    "@zerodev/ecdsa-validator": "^5.3.1",
    "@zerodev/permissions": "^5.3.1",
    "viem": "^2.7.12",
    "wagmi": "^2.5.7",
    "@tanstack/react-query": "^5.28.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.53.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "c8": "^10.1.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "nyc": "^17.1.0",
    "prettier": "^3.6.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
