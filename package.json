{
  "name": "zap-pilot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--max-old-space-size=3072 next dev",
    "dev:turbo": "cross-env NODE_OPTIONS=--max-old-space-size=3072 next dev --turbopack",
    "dev:webpack": "cross-env NODE_OPTIONS=--max-old-space-size=3072 next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "echo 'üîç Running TypeScript type-check...' && tsc --noEmit && echo '‚úÖ Type-check completed successfully!'",
    "test": "cross-env NODE_OPTIONS=--max-old-space-size=2048 vitest run --pool=threads --poolOptions.threads.singleThread=true --maxConcurrency=1",
    "test:unit": "cross-env NODE_OPTIONS=--max-old-space-size=2048 vitest run tests/unit --pool=threads --poolOptions.threads.singleThread=true --maxConcurrency=1",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest --watch",
    "test:safe": "cross-env NODE_OPTIONS=--max-old-space-size=3072 vitest run --pool=threads --poolOptions.threads.singleThread=true --maxConcurrency=1 --reporter=verbose",
    "test:safeall": "cross-env NODE_OPTIONS=--max-old-space-size=3072 npm run test:safe:coverage && npm run test:safe:e2e",
    "test:safe:coverage": "cross-env NODE_OPTIONS=--max-old-space-size=3072 vitest run --coverage --pool=threads --poolOptions.threads.singleThread=true --maxConcurrency=1 && node scripts/check-coverage.js",
    "test:safe:e2e": "cross-env NODE_OPTIONS=--max-old-space-size=2048 node scripts/run-e2e-safe.js",
    "test:coverage": "vitest run --coverage && node scripts/check-coverage.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "deadcode": "knip --exports --dependencies",
    "deadcode:ci": "knip --exports --dependencies --reporter=json",
    "deadcode:fix": "knip --exports --dependencies --fix",
    "deadcode:check": "knip --exports --dependencies --reporter=compact",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@tanstack/react-query": "^5.85.3",
    "@tanstack/react-query-devtools": "^5.85.3",
    "framer-motion": "^12.19.1",
    "lucide-react": "^0.523.0",
    "next": "^15.5.2",
    "next-pwa": "^5.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "thirdweb": "^5.105.10"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "knip": "^5.66.4",
    "lint-staged": "^16.1.2",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vite": "^7.1.12",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "@walletconnect/sign-client": "2.22.4",
    "@walletconnect/universal-provider": "2.22.4",
    "@walletconnect/core": "2.22.4",
    "@walletconnect/types": "2.22.4",
    "@walletconnect/utils": "2.22.4",
    "@walletconnect/logger": "3.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
