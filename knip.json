{
  "$schema": "https://unpkg.com/knip@latest/schema.json",

  "entry": [
    "src/app/**/page.tsx",
    "src/app/**/layout.tsx",
    "src/app/**/template.tsx",
    "src/app/**/error.tsx",
    "src/app/**/loading.tsx",
    "src/app/**/not-found.tsx",
    "scripts/**/*.{js,ts}"
  ],

  "project": ["src/**/*.{ts,tsx}", "scripts/**/*.{js,ts}"],

  "ignore": [
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "tests/**",
    "playwright.config.ts",
    "vitest.config.ts",
    "eslint.config.mjs",
    "postcss.config.mjs",
    "**/index.ts",
    "**/index.tsx"
  ],

  "ignoreDependencies": [
    "@types/*",
    "eslint-config-next",
    "eslint-plugin-jsx-a11y",
    "eslint-plugin-react",
    "eslint-plugin-react-hooks",
    "pino-pretty"
  ],

  "ignoreExportsUsedInFile": {
    "interface": false,
    "type": false
  },

  "includeEntryExports": true,

  "next": {
    "entry": [
      "src/app/**",
      "!src/app/**/*.test.{ts,tsx}",
      "!src/app/**/*.spec.{ts,tsx}"
    ]
  },

  "vitest": {
    "config": ["vitest.config.ts"],
    "entry": ["tests/**/*.{test,spec}.{ts,tsx}"]
  },

  "playwright": {
    "config": ["playwright.config.ts"]
  }
}
