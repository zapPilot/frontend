{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "entry": ["src/app/**/*.{ts,tsx}", "next.config.ts", "src/middleware.ts"],
  "project": ["src/**/*.{ts,tsx}"],
  "ignore": [
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "tests/**",
    "scripts/**",
    "playwright.config.ts",
    "vitest.config.ts"
  ],
  "ignoreDependencies": [
    "@types/*",
    "husky",
    "lint-staged",
    "cross-env",
    "pino-pretty",
    "eslint-config-next",
    "eslint-plugin-jsx-a11y",
    "eslint-plugin-react",
    "eslint-plugin-react-hooks",
    "tailwindcss",
    "postcss"
  ],
  "ignoreExportsUsedInFile": true,
  "includeEntryExports": true,
  "next": {
    "entry": ["src/app/**", "src/middleware.ts"]
  }
}
