{
  "$schema": "https://unpkg.com/knip@latest/schema.json",

  "entry": ["src/app/**/page.tsx", "src/app/**/layout.tsx", "scripts/**/*.{js,ts}"],

  "project": ["src/**/*.{ts,tsx}", "scripts/**/*.{js,ts}"],

  "ignore": [
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "tests/**",
    "playwright.config.ts",
    "vitest.config.ts",
    "eslint.config.mjs",
    "postcss.config.mjs"
  ],

  "ignoreDependencies": [
    "@types/*",
    "eslint-config-next",
    "eslint-plugin-jsx-a11y",
    "eslint-plugin-react",
    "eslint-plugin-react-hooks",
    "pino-pretty"
  ],

  "ignoreExportsUsedInFile": {
    "interface": true,
    "type": true
  },

  "includeEntryExports": true,

  "next": {
    "entry": ["src/app/**", "!src/app/**/*.test.{ts,tsx}", "!src/app/**/*.spec.{ts,tsx}"]
  },

  "vitest": {
    "config": ["vitest.config.ts"],
    "entry": ["tests/**/*.{test,spec}.{ts,tsx}"]
  },

  "playwright": {
    "config": ["playwright.config.ts"]
  }
}
